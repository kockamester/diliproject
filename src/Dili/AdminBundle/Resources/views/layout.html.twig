<!DOCTYPE html>
{% from 'MopaBootstrapBundle::flash.html.twig' import session_flash %}
<html>
{% block head %}
    <head>

        <title>{% block title %}Dili naptár{% endblock title %}</title>


        {% block meta %}
            <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            <meta charset="UTF-8">
        {% endblock meta %}

        {% block head_externals %}
            <!-- Favicon -->
            <link rel="shortcut icon" href="{{ asset('bundles/diliadmin/images/favicon.jpg') }}">

            <!-- jQuery -->
            <script src="{{ asset('bundles/diliadmin/lib/jquery/jquery-2.1.0.js') }}"></script>
            <!-- Bootstrap core CSS -->
            <link href="{{ asset ('bundles/diliadmin/lib/bootstrap/css/bootstrap.css') }}" rel="stylesheet"/>
            <link href="{{ asset('bundles/diliadmin/lib/bootstrap/css/bootstrap-theme.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('bundles/diliadmin/lib/bootstrap/css/starter-template.css') }}" rel="stylesheet"/>

            <!-- Include all compiled plugins (below), or include individual files as needed -->
            <script src="{{ asset('bundles/diliadmin/lib/bootstrap/js/bootstrap.min.js') }}"></script>

            <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
            <!--[if lt IE 9]>
            <script src="{{ asset('bundles/diliadmin/js/html5shiv.js') }}"></script>
            <script src="{{ asset('bundles/diliadmin/js/respond.min.js') }}"></script>
            <![endif]-->

            <!-- Main css -->
            <link href="{{ asset('bundles/diliadmin/lib/jquery-ui/css/smoothness/jquery-ui-1.10.4.custom.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('bundles/diliadmin/css/main.css') }}" rel="stylesheet"/>

            <!-- jQuery UI -->

            <script src="{{ asset('bundles/diliadmin/lib/jquery-ui/js/jquery-ui-1.10.4.custom.min.js') }}"></script>
            <script src="{{ asset('bundles/diliadmin/lib/jquery-ui/js/jquery.ui.datepicker-hu.js') }}"></script>

            <!-- Time picker -->
            <link href="{{ asset('bundles/diliadmin/lib/jquery-ui-timepicker/jquery-ui-timepicker-addon.css') }}" rel="stylesheet"/>
            <script src="{{ asset('bundles/diliadmin/lib/jquery-ui-timepicker/jquery-ui-timepicker-addon.js') }}"></script>

            <!-- Site js -->
            <script src="{{ asset('bundles/diliadmin/js/site.js') }}"></script>
        {% endblock head_externals %}



        {% block head_end %}
        {% endblock head_end %}


    </head>
{% endblock head %}
<body>
{% block body %}
    {% block navbar %}
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Timelog</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">

                        <li><a href="#">Felhasználók</a></li>
                        <li><a href="#") }}">Szabadságok</a></li>
                        <li><a href="#">Munkarend változások</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Log <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Log</a></li>
                                <li><a href="#">Import</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>


    {% endblock navbar %}

    <div class="container-fluid">
        <div class="col-md-1"></div>
        <div class="container col-md-7">

            {% block flashes %}
                {% if app.session.flashbag.peekAll|length > 0 %}
                    <div class="row-fluid">
                        <div class="span12">
                            {{ session_flash() }}
                        </div>
                    </div>
                {% endif %}
            {% endblock flashes %}

            <div class="modal-body">
                {% block container %}
                    <div class="jumbotron">
                        <h2>Üdvözöljük a Tiszta Dili Naptár Admin felületén!</h2>
                        <br>
                        <p>
                            Itt lehetősége van feltölteni és módosítani az adatokat.
                        </p>
                    </div>

                {% endblock container %}
            </div>
        </div>


        <div class="rightbar col-md-3">
            {% block rightbar %}

            {% endblock rightbar %}
        </div>
        <div class="container col-md-1"></div>

        <div style="clear:both"></div>

        {% block footer %}
            <div id="footer">
                <div id="copyright" class="container">
                    <p><img alt="Tiszta Dilig logo" src={{ asset('bundles/timelogadmin/images/netpos_logo.png') }}> -
                        Copyright © 2001-2014</p>
                </div>
            </div>
        {% endblock footer %}

    </div>
{% endblock body %}
</body>


</html>